    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "gifenc": "^1.0.2",
    "happy-dom": "^14.12.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
